<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
        <% order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2 class="sub-header">商品</h2>

  <p>
    <strong>商品名：</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>価格：</strong>
     <%= number_to_currency(product.try(:price), precision: 0, unit: "円") %>
  </p>

  <h2 class="sub-header">お客様情報</h2>

  <p>
    <strong>氏名：</strong>
    <%= current_user.name %>
  </p>

  <p>
    <strong>メールアドレス:</strong>
    <%= current_user.email %>
  </p>

  <div class="form-group">
    <%= form.label :shipping_address %>
    <%= form.text_field :shipping_address, class: "form-control" %>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id %>
  <%= form.hidden_field :product_id, value: product.id %>

  <div class="actions">
    <%= form.submit '購入確定', class: "btn btn-success", data: { confirm: 'この内容で購入してもよろしいですか？ ' } %>
  </div>
<% end %>
