<!DOCTYPE html>
<html>
   <head>
      <title>Eshop</title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
      <!-- TODO add these as assets -->
      <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
      <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
      <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
      <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
   </head>

   <body>
      <div class="container-fluid">
      <%= link_to "Eshop", "/products", class: "navbar-brand" %>
         <div class="row">
            <% if notice %>
              <p class="alert alert-success"><%= notice %></p>
            <% end %>
            <% if alert %>
             <p class="alert alert-danger"><%= alert %></p>
            <% end %>
            <div class="col-sm-4 col-md-3 sidebar">
              <div class="mini-submenu">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </div>
              <% if user_signed_in? %>
                <ul class="nav nav-sidebar">
                  <li class="active"><%= link_to 'Products', products_path %></li>
                  <li class="active"><%= link_to 'Users', users_path %></li>
                  <li class="active"><%= link_to 'orders', orders_management_index_path %></li>
                </ul>
              <% end %>
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
               <!--Body content-->
              <%= yield %>
            </div>
         </div>
      </div>
   </body>
</html>