<!DOCTYPE html>
<html>
   <head>
      <title>Eshop</title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
      <!-- TODO add these as assets -->
      <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
      <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
      <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
      <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
   </head>

   <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" >Eshop</a>
      <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#Navber" aria-controls="Navber" aria-expanded="false" aria-label="ナビゲーションの切替">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="Navber">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to '商品', products_path %><span class="sr-only">(現位置)</span>
          </li>
          <% if user_signed_in? %>
            <% if current_user.admin_flg? %>
              <li class="nav-item">
                <%= link_to 'ユーザー', users_path %>
              </li>
              <% end %>
          <% end %>
          <li class="nav-item">
          <%= link_to '注文一覧', orders_management_index_path %>
          </li>
          <% if user_signed_in? %>
            <li class="nav-item">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            </li>
            <% else %>
            <li class="nav-item">
            <%= link_to "ログイン", new_user_session_path, class: 'post' %>
            </li>
          <% end %>
          <li class="nav-item">
            <%= link_to "新規登録", new_user_path, class: 'post' %>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </nav>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <!--Body content-->
      <%= yield %>
    </div>
  </body>
</html>