<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h2 class="sub-header">カート</h2>
<table class="table-striped table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>個数</th>
      <th>価格</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart.line_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td>&times;<%= item.quantity %></td>
        <td class="item_price"><%= number_to_currency(item.total_price) %></td>
      </tr>
    <% end %>
  </tbody>

  <tr>
    <td colspan="2">合計</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
  </tr>
</table>

<%= link_to '購入を続ける', products_path, class: 'btn btn-primary' %>
<%= link_to '購入する', new_order_path, class: 'btn btn-primary' %>
<%= link_to 'カートを空にする', cart_path(id: @cart.id), method: :delete, class: 'btn btn-default' %>